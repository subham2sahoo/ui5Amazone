<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="a.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:f="sap.f"
>
    <Page
        id="page"
        title="{i18n>title}"
        showHeader="false"
    >
        <content>
            <FlexBox
                class="topBar"
                alignItems="Center"
                justifyContent="SpaceBetween"
                width="100%"
            >
                <FlexBox
                    justifyContent="SpaceAround"
                    alignItems="Center"
                    width="20%"
                >
                    <Image
                        class="image"
                        src="./image/icon.png"
                        width="105%"
                        height="100px"
                    />

                    <VBox class="hover">
                        <Text
                            class="color1"
                            text="Delivering to Hyderabad 500090"
                        />

                        <HBox class="">
                            <core:Icon
                                src="sap-icon://map"
                                class="colorWhite"
                            />
                            <Text
                                class="colorWhite"
                                text="Update location"
                            />
                        </HBox>
                    </VBox>
                </FlexBox>

                <FlexBox
                    class="serchFieldFlex"
                    justifyContent="Center"
                    alignItems="Center"
                    width="60%"
                    height="95%"
                >
                    <SearchField
                        id="searchField"
                        width="100%"
                        placeholder="Serach Amazone.in"
                        class="searchField height"
                    />
                </FlexBox>

                <FlexBox
                    justifyContent="SpaceAround"
                    alignItems="Center"
                    width="20%"
                >
                    <HBox class="hover">
                        <Text
                            text="EN"
                            class="sapUiSmallMarginBegin colorWhite "
                        />
                        <core:Icon
                            src="sap-icon://megamenu"
                            size="60%"
                            class="colorWhite"
                        />
                    </HBox>

                    <VBox class="sapUiSmallMarginBegin hover">
                        <Text
                            class="colorWhite"
                            text="Hello,sign in"
                        />
                        <HBox>
                            <Text
                                class="colorWhite bold"
                                text="Account and Lists"
                            />
                            <core:Icon
                                src="sap-icon://megamenu"
                                size="60%"
                                class="colorWhite"
                            />
                        </HBox>
                    </VBox>

                    <VBox class="sapUiSmallMarginBegin hover">
                        <Text
                            class="colorWhite"
                            text="Return"
                        />
                        <Text
                            class="colorWhite"
                            text=" &amp;Orders"
                        />
                    </VBox>

                    <HBox class="cart hover">
                        <core:Icon
                            src="sap-icon://cart"
                            class="colorWhite largeFont"
                        />
                        <Text
                            class="colorWhite"
                            text="Cart"
                        />
                    </HBox>
                </FlexBox>
            </FlexBox>
            <FlexBox
                class="secondBar"
                alignItems="Center"
                justifyContent="SpaceBetween"
            >
                <FlexBox
                    class="all"
                    id="all"
                    justifyContent="Center"
                    alignItems="Center"
                >
                    <core:Icon
                        src="sap-icon://menu2"
                        size="60%"
                        class="colorWhite bold extraLarge"
                        press=".onCollapseExpandPress"
                    />
                    <Text
                        text="All"
                        class="sapUiTinyMarginBegin colorWhite bold"
                    />
                </FlexBox>
                <Text
                    text="Fresh"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Amazon miniTV"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Sell"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Best Sellers"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Today's Deals"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Mobiles"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Electronics"
                    class="colorWhite bold hover2"
                />
                <FlexBox
                    justifyContent="Center"
                    alignItems="Center"
                >
                    <Text
                        text="Prime"
                        class="sapUiTinyMarginBegin colorWhite bold"
                    />
                    <core:Icon
                        src="sap-icon://megamenu"
                        size="60%"
                        class="colorWhite bold hover2"
                    />
                </FlexBox>
                <Text
                    text="Customer Service"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Gift Ideas"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="New Releases"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Home &amp; kitchen"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Fashion"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Amazon Pay"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Computers"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Books"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Car &amp; Motorbike"
                    class="colorWhite bold hover2"
                />
                <Text
                    text="Toys &amp; Games"
                    class="colorWhite bold hover2"
                />
            </FlexBox>

            <SplitContainer
                id="master"
                mode="HideMode"
            >
                <masterPages>
                    <tnt:SideNavigation
                        id="sideNavigation"
                        width="100%"
                        class="sideNav"
                        itemSelect=""
                        visible="false"
                    >
                        <tnt:NavigationList>
                            <tnt:NavigationListItem
                                text="Trending"
                                icon=""
                            >
                                <tnt:NavigationListItem text="Best Sellers" />
                                <tnt:NavigationListItem text="New Releases" />
                                <tnt:NavigationListItem
                                    text="Movers and Shakers"
                                />
                            </tnt:NavigationListItem>
                            <tnt:NavigationListItem
                                text="Digital Content and Devices"
                                icon=""
                            >
                                <tnt:NavigationListItem
                                    text="Echo &amp; Alexa"
                                />
                                <tnt:NavigationListItem text="Fire Tv" />
                                <tnt:NavigationListItem
                                    text="Kindle E-Readers &amp; eBooks"
                                />
                                <tnt:NavigationListItem
                                    text="Audible Audiobooks"
                                />
                                <tnt:NavigationListItem
                                    text="Amazone Prime Video"
                                />
                                <tnt:NavigationListItem
                                    text="Amazone Prime Music"
                                />
                            </tnt:NavigationListItem>

                            <tnt:NavigationListItem
                                text="Shop by Category"
                                icon=""
                            >
                                <tnt:NavigationListItem
                                    text="Mobiles, Computers"
                                />
                                <tnt:NavigationListItem text="TV Appliances" />
                                <tnt:NavigationListItem
                                    text="Kindle E-Readers &amp; eBooks"
                                />
                                <tnt:NavigationListItem text="Men's Fashion" />
                                <tnt:NavigationListItem
                                    text="Women's Fashion"
                                />
                                <tnt:NavigationListItem
                                    text="Amazone Prime Music"
                                />
                            </tnt:NavigationListItem>

                            <tnt:NavigationListItem
                                text="Programs &amp; Features"
                                icon=""
                            >
                                <tnt:NavigationListItem text="Amazone Pay" />
                                <tnt:NavigationListItem
                                    text="Gift Cards &amp; Mobile Recharges"
                                />
                                <tnt:NavigationListItem
                                    text="Amazone Lunchpad"
                                />
                                <tnt:NavigationListItem
                                    text="Handloom &amp; Handcrafts"
                                />
                            </tnt:NavigationListItem>
                        </tnt:NavigationList>

                        <tnt:fixedItem>
                            <tnt:NavigationList class="largeFont signIn">
                                <tnt:NavigationListItem
                                    text="Hello,sign in"
                                    icon="sap-icon://employee"
                                    class="largeFont signIn"
                                />
                            </tnt:NavigationList>
                        </tnt:fixedItem>
                    </tnt:SideNavigation>
                </masterPages>
                <detailPages>
                <FlexBox class="mainFlex" width="100%"  displayInline="true" justifyContent="Center" alignItems="Start" renderType="Bare">
               <!-- <VBox class="shadow" height="45%" width="80%">
                    <HBox class="shadow1" height="40%" width="100%"></HBox>
                    <HBox class="shadow2" height="40%" width="100%"></HBox>
                    <HBox class="shadow3" height="20%" width="100%"></HBox>
               </VBox> -->
                
                            <Carousel
                                id="car"
                                class="car"
                                showPageIndicator="false"
                                height="75%" width="80%"
                                loop="true"
                            >
                                <Image
                                    height="100%"
                                    src="https://images-eu.ssl-images-amazon.com/images/G/31/2024/Gateway/January/BAU/Antifog_3000x1200._CB584948772_.jpg"
                                    
                                />
                                <Image
                                height="100%"
                                    src="https://images-eu.ssl-images-amazon.com/images/G/31/img23/Fashion/GW/Nov/One/Deals-PC-3000-Unrec-Onecard._CB571754517_.jpg"
                                    alt="Example picture of USB flash drive"
                                />
                                <Image
                                height="100%"
                                    src="https://images-eu.ssl-images-amazon.com/images/G/31/img2020/img21/apparelGW/jan24atf/unrec/citi/pc-1_2x._CB584618827_.jpg"
                                    
                                />
                                <Image
                                height="100%"
                                    src="https://images-eu.ssl-images-amazon.com/images/G/31/IMG20/Home/2024/Gateway/ATFGW/Winter_Blankets_GW_PC_3000x1200_UNREC._CB584967333_.jpg"
                                    
                                />
                            </Carousel>
                </FlexBox>
                <FlexBox class="content" direction="Column">
                <FlexBox direction="Row"></FlexBox>
                <FlexBox direction="Row"></FlexBox>
                </FlexBox>
                </detailPages>
            </SplitContainer>
        </content>
    </Page>
</mvc:View>
